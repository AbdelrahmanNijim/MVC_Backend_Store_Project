@model ServicesVm
@{
    ViewData["Title"] = "Delete";
}
@section Header{
    <h1>Delete</h1>
}

<div class="container d-flex  min-vh-200">
    <div class="card shadow-lg border-0 col-md-12 col-lg-6">

        <div class="card-header bg-danger text-white text-center">
            <h2 class="card-title mb-0">Delete</h2>
        </div>
        <div class="row ">
            <div class="col-md-6">
                <img src="~/Files/images/@Model.ImageName" class="img-fluid" alt="Image" style="height: 70%; width: 70%;">
            </div>
            <div class="col-md-6">
                <div class="card-body ">
                    <ul class="list-unstyled ">
                        <div class="d-inline-block text-truncate   ">
                            <h3 class=" text-uppercase font-weight-bold ">@Model.name Service</h3>
                        </div>
                      
                   
              
                        <li>
                            <p class="card-text font-weight-bold text-muted ">Do You Want To Delete This Service?</p>
                            <form asp-controller="Services" asp-action="Delete">
                                <input type="hidden" asp-for="id" />
                            <div class="row d-flex justify-content-md-start">

                                    <button asp-controller="Services" asp-action="Delete" class="btn btn-outline-danger ml-1">Delete</button>

                                <a asp-controller="Services" asp-action="Index" type="button" class="btn btn-outline-info ml-1 ">Cancel</a>

                            </form>
                              
                               
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

